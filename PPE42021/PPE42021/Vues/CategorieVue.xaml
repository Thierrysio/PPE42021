<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PPE42021.Vues.CategorieVue">
    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
            <Frame 
                Padding="0" 
                Margin="10"
                VerticalOptions="StartAndExpand"
                WidthRequest="100" 
                HeightRequest="100" 
                HorizontalOptions="Center" 
                BorderColor="#DC3F3F" CornerRadius="25">
                <Grid>
                    <StackLayout>
                        <Image 
                            Source="https://freepngimg.com/download/burger/3-2-burger-free-png-image.png" 
                            Aspect="AspectFill"
                            Margin="5"
                            HeightRequest="80" />
</StackLayout>
                    <StackLayout VerticalOptions="End">

                        <Label 
                            Text="HELLO" 
                            Padding="0,0,0,5" 
                            HorizontalOptions="Center" 
                            FontSize="Default" 
                            FontAttributes="Bold" />
                    </StackLayout>
                </Grid>
            </Frame>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>